{
  "name": "haccp-trace-backend",
  "version": "1.0.0",
  "description": "HACCP Traceability System Backend API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "esbuild worker.js --bundle --format=esm --outfile=dist/worker.js --target=es2022",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "haccp",
    "traceability",
    "food",
    "safety"
  ],
  "author": "HACCP Trace Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "sqlite3": "^5.0.2",
    "pg": "^8.11.0",
    "cors": "^2.8.5",
    "body-parser": "^1.19.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.4.4",
    "moment": "^2.29.1",
    "uuid": "^8.3.2",
    "helmet": "^4.6.0",
    "express-rate-limit": "^5.3.0",
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.12",
    "esbuild": "^0.19.0",
    "wrangler": "^3.0.0"
  }
}
